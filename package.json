{
  "name": "aem-maven-archetype",
  "version": "1.0.0",
  "description": "Generates an AEM Frontend project with Webpack",
  "repository": {
    "type": "git",
    "url": ""
  },
  "private": true,
  "main": "src/main/webpack/site/main.ts",
  "license": "SEE LICENSE IN LICENSE.txt",
  "scripts": {
    "sync": "aemsync -d -p ../apps/src/main/content/jcr_root/apps/INIT",
    "dev": "webpack --env dev --config ./webpack.dev.js && npm run sync",
    "prod": "webpack --env prod --config ./webpack.prod.js",
    "start": "webpack-dev-server --open --config ./webpack.dev.js",
    "chokidar": "chokidar ./src/main/webpack/**/*",
    "aemsyncro": "aemsync -w ../apps/src/main/content/jcr_root/apps/INIT",
    "watch": "npm run start & npm run chokidar & npm run aemsyncro"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.3.3",
